<Window x:Class="StorageAndRecipe.Storage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageAndRecipe"
        mc:Ignorable="d"
        Title="Storage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <DataGrid Width="792" Padding="0,0,0,5" Margin="0,0,0,5">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NameTextColumn" Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Width="60*" Header="Name"/>
                <DataGridTextColumn x:Name="BestBeforeTextColumn" Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Width="20*" Header="Best Before"/>
                <DataGridTemplateColumn x:Name="ActionTemplateColumn" ClipboardContentBinding="{x:Null}" Width="20*" Header="Actions"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add New Item" HorizontalAlignment="Center" VerticalAlignment="Top" Width="113" Grid.Row="1" Padding="1"/>

    </Grid>
</Window>
