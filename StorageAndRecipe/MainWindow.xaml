<Window x:Name="MainWindow1" x:Class="StorageAndRecipe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageAndRecipe"
        mc:Ignorable="d"
        Title="Storage and Recipe" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" >
            <MenuItem x:Name="LanguageMenuItem" MinWidth="60" MinHeight="20" Header="Language">
                <RadioButton x:Name="GermanRadioButton" Content="Deutsch" />
                <RadioButton x:Name="EnglishRadioButton" Content="English" IsChecked="True"/>
            </MenuItem>

        </Menu>
        <Button x:Name="StorageButton" Content="Storage" Grid.Row="1" />
        <Button x:Name="RecipeButton" Content="Recipe" Grid.Column="1" Grid.Row="1" />


    </Grid>
</Window>
